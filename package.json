{
  "name": "EAM_ONPREM",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/http-client": "^2.14.0",
    "@sap/cds": "5.9.8",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.19",
    "@sap/xssec": "^3",
    "axios": "^1.3.4",
    "express": "^4",
    "hdb": "^0.19.0",
    "passport": "^0"
  },
  "devDependencies": {
    "sqlite3": "^5.0.4"
  },
  "scripts": {
    "start": "cds run"
  },
  "engines": {
    "node": "^16.15"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "hana-cloud"
      },
      "EAM_SRV": {
        "kind": "odata-v2",
        "model": "srv/external/EAM_SRV",
        "csrf": "true",
        "csrfInBatch": "true",
        "credentials": {
          "destination": "ced100",
          "path": "/sap/opu/odata/CERPASS/EAM_SRV",
          "forwardAuthToken": true,
          "requestTimeout": 300000
        }
      },
      "auth": {
        "kind": "xsuaa"
      }
    }
  }
}
